<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardNoticias"
        app:cardMaxElevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fotoNoticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:id="@+id/relativeLayout"
                android:layout_alignBottom="@+id/FotoConvenio"
                android:background="@color/fondo_transparente">




                <TextView
                    android:id="@+id/nommbreNoticia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@android:color/white"/>


                <TextView
                    android:id="@+id/descripcionNoticia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_below="@+id/nombreConvenio"/>



            </RelativeLayout>
        </RelativeLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>