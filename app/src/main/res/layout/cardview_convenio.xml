<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/FotoConvenio"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uniquindio"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/relativeLayout"
            android:layout_alignBottom="@+id/FotoConvenio"
            android:background="@color/fondo_transparente">


            <TextView
                android:id="@+id/nombreConvenio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Nombre ciudad"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/informacion_Convenio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asfdgdsag"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:layout_below="@+id/nombreConvenio"/>

            <TextView
                android:id="@+id/contactoConvenio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asfdgdsag"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:layout_below="@+id/informacion_Convenio"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>