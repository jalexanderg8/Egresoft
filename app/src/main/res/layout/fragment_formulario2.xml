            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:background="@drawable/bordes_btn_rojo"
            android:text="Cancelar"
            android:onClick="onClick"
            android:textColor="@color/white"/>

    </LinearLayout>




</LinearLayout>