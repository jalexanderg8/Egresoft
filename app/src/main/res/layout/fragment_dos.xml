<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context="com.example.foxconntech.egresoft.fragments.fragments_splash.dos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="significado de cada icono"
                    android:gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:backgroundTint="@color/sena1">


                <ImageView
                    android:id="@+id/Plaboral"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    app:srcCompat="@drawable/portal_laboral" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Portal Laboral"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/contactenos"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_gravity="bottom"
                    android:layout_row="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    app:srcCompat="@drawable/contactenos" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Contactenos"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


                <ImageView
                    android:id="@+id/eventos"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_gravity="bottom"
                    android:layout_row="2"
                    android:textColor="@color/black"
                    app:srcCompat="@drawable/eventos" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView7"
                    android:layout_gravity="bottom"
                    android:text="Noticias y Eventos"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/oacademica"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_gravity="bottom"
                    android:layout_row="3"
                    android:gravity="center"
                    android:textColor="@color/black"
                    app:srcCompat="@drawable/oferta_academica" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Oferta Academica"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


                <ImageView
                    android:id="@+id/info"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_gravity="bottom"
                    android:layout_row="4"
                    android:textColor="@color/black"
                    app:srcCompat="@drawable/informcion" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="informacion"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/exit"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:gravity="center"
                    app:srcCompat="@drawable/icono_salir" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Salir"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


            </GridLayout>
        </LinearLayout>




    </ScrollView>




</RelativeLayout>
