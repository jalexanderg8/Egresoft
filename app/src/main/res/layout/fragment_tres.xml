<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.example.foxconntech.egresoft.fragments.fragments_splash.tres">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="63dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="si ya eres egresado, tendras un menu inferior como el siguiente"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:id="@+id/textView" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="none"
        android:id="@+id/scrollarriba">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@drawable/portal_laboral_fondo_blanco" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@drawable/oferta_academica_blanco" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@drawable/eventos_blanco" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@drawable/convenios_blanco" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@drawable/contactenos_blanco" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:text="si no lo eres, visualizaras uno como este:"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_below="@+id/scrollarriba"
        android:gravity="center_horizontal"
        android:id="@+id/textView3" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fadeScrollbars="true"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:scrollbars="none"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@drawable/oferta_academica_blanco" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@drawable/eventos_blanco" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@drawable/convenios_blanco" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@drawable/infor_blanco" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@drawable/icono_salir_blanco" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>


</RelativeLayout>
