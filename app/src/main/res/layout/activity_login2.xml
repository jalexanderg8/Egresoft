<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.foxconntech.egresoft.activitys.ActivityLogin">

    <ImageView
        android:src="@drawable/logoegresoft"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <AutoCompleteTextView
        android:id="@+id/usuario"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="Usuario"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#0BB634"
        android:autofillHints="@string/bottom_sheet_behavior"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:id="@+id/contraseña"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="Contraseña"
        android:textAlignment="center"
        android:textColorHint="#0BB634"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/usuario"
        android:layout_alignStart="@+id/usuario" />

    <Button
        android:id="@+id/btnIngEgresado"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes"
        android:layout_marginTop="51dp"
        android:textColor="@color/cardview_light_background"
        android:text="Egresado"
        android:onClick="onClick"
        android:layout_below="@+id/contraseña"
        android:layout_alignLeft="@+id/btnIngInvitado"
        android:layout_alignStart="@+id/btnIngInvitado"
        android:layout_alignRight="@+id/btnIngInvitado"
        android:layout_alignEnd="@+id/btnIngInvitado" />

    <Button
        android:id="@+id/btnIngInvitado"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes"
        android:textColor="@color/cardview_light_background"
        android:onClick="onClick"
        android:text="Invitado"
        android:layout_below="@+id/btnIngEgresado"
        android:layout_marginTop="19dp"
        android:layout_alignLeft="@+id/contraseña"
        android:layout_alignStart="@+id/contraseña"
        android:layout_alignRight="@+id/contraseña"
        android:layout_alignEnd="@+id/contraseña" />

    <TextView
        android:id="@+id/lblRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0066CC"
        android:text="Registrarse"
        android:textSize="20dp"
        android:layout_alignTop="@+id/btnIngInvitado"
        android:layout_alignRight="@+id/btnIngInvitado"
        android:layout_alignEnd="@+id/btnIngInvitado"
        android:layout_marginTop="54dp" />


</RelativeLayout>
