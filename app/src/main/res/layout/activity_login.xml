<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.foxconntech.egresoft.activitys.Login">

    <ImageView

        android:src="@drawable/logoegresoft"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />
    <AutoCompleteTextView
        android:id="@+id/usuario"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/user"
        android:paddingLeft="20dp"
        android:background="@drawable/bordestext"
        android:hint="     Correo Electronico"
        android:inputType="text"
        android:textColorHint="@color/divider"
        android:autofillHints="Correo Electroonico"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:id="@+id/contraseña"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/bordestext"
        android:drawableLeft="@drawable/lock"
        android:paddingLeft="20dp"
        android:hint="   Contraseña"
        android:autofillHints="Contraseña"
        android:textColorHint="@color/divider"

        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/usuario"
        android:layout_alignStart="@+id/usuario" />

    <Button
        android:id="@+id/btnEgresado"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes"
        android:layout_marginTop="30dp"
        android:text="Egresado"
        android:onClick="onClick"
        android:textColor="@color/divider"
        android:layout_below="@+id/contraseña"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnInvitado"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes"
        android:textColor="@color/divider"
        android:onClick="onClick"
        android:text="Invitado"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/btnEgresado"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/lblRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/divider"
        android:text="Registrarse"
        android:textSize="20dp"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/contraseña"
        android:layout_alignStart="@+id/contraseña"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:onClick="onClick" />

    <TextView
        android:textSize="20dp"
        android:text="||"
        android:textColor="@color/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblRegistrarse"
        android:layout_alignBottom="@+id/lblRegistrarse"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/recuperarContra"
        android:textSize="20dp"
        android:textColor="@color/divider"
        android:text="Recordar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

</RelativeLayout>


