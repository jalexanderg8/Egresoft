<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/fachada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.foxconntech.egresoft.activitys.Login">


    <ImageView

        android:src="@drawable/logoegresoft"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="21dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black">

        <EditText
            android:layout_gravity="center"
            android:id="@+id/usuario"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:autofillHints="Correo Electroonico"
            android:background="@drawable/bordestext"
            android:drawableLeft="@drawable/user"
            android:hint="     Correo Electronico"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/divider"
            android:layout_marginBottom="20dp" />



    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black">

        <EditText
            android:layout_gravity="center"
            android:id="@+id/contraseña"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:autofillHints="Contraseña"
            android:background="@drawable/bordestext"
            android:drawableLeft="@drawable/lock"
            android:hint="   Contraseña"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/divider" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnEgresado"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bordes_btn_verde"
        android:text="Egresado"
        android:onClick="onClick"
        android:textColor="@color/divider"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/btnInvitado"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bordes_btn_verde"
        android:onClick="onClick"
        android:text="Invitado"
        android:textColor="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/lblRegistrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sena1"
            android:text="Registrarse"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:onClick="onClick" />

        <TextView
            android:textSize="20dp"
            android:text="||"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/sena1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lblRecuperarContra"
            android:textSize="20dp"
            android:textColor="@color/sena1"
            android:text="Recordar"
            android:onClick="onClick"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>


