<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#fff9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="10dp"
       >

        <LinearLayout
            android:id="@+id/layoutCentro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
           >

            <ImageView
                android:id="@+id/FotoEvento"
                style="@style/Animation.AppCompat.DropDownUp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:elevation="10dp"
                app:srcCompat="@mipmap/ic_launcher" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/nombre_Evento"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="nombre evento"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/fecha_Evento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/nombre_Evento"
                        android:layout_alignStart="@+id/nombre_Evento"
                        android:layout_below="@+id/nombre_Evento"
                        android:text="98 de mato"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/direccion_Evento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/FotoEvento"
                        android:layout_alignLeft="@+id/nombre_Evento"
                        android:layout_alignStart="@+id/nombre_Evento"
                        android:layout_marginBottom="17dp"
                        android:text="calle blabasdlkgj"
                        android:textSize="10dp" />


                </LinearLayout>


                <Button
                    android:id="@+id/btnRegistrarAlEvento"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/bordes_btn_verde"
                    android:onClick="onClick"
                    android:text="registrarme al evento"
                    android:textSize="10dp" />


            </LinearLayout>




        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
