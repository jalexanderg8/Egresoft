<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="10dp"
        android:layout_weight="0.13"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/FotoEvento"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_column="0"
                android:layout_row="0"
                android:elevation="6dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/nombre_Evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/FotoEvento"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="28dp"
                android:text="nombre evento"
                android:textSize="40dp"/>

            <TextView
                android:id="@+id/fecha_Evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98 de mato"
                android:textSize="30dp"
                android:layout_below="@+id/nombre_Evento"
                android:layout_alignLeft="@+id/nombre_Evento"
                android:layout_alignStart="@+id/nombre_Evento" />

            <TextView
                android:id="@+id/direccion_Evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="calle blabasdlkgj"
                android:textSize="30dp"
                android:layout_below="@+id/fecha_Evento"
                android:layout_alignLeft="@+id/fecha_Evento"
                android:layout_alignStart="@+id/fecha_Evento" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>