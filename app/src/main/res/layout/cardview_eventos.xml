<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FACE8B"
        app:cardElevation="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
       >

        <RelativeLayout
            android:id="@+id/layoutCentro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/FotoEvento"
                style="@style/Animation.AppCompat.DropDownUp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:elevation="10dp"
                app:srcCompat="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/nombre_Evento"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/FotoEvento"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/FotoEvento"
                android:layout_toRightOf="@+id/FotoEvento"
                android:text="nombre evento"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/fecha_Evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nombre_Evento"
                android:layout_alignStart="@+id/nombre_Evento"
                android:layout_below="@+id/nombre_Evento"
                android:text="98 de mato"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/direccion_Evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/FotoEvento"
                android:layout_alignLeft="@+id/nombre_Evento"
                android:layout_alignStart="@+id/nombre_Evento"
                android:layout_marginBottom="17dp"
                android:text="calle blabasdlkgj"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btnRegistrarAlEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:onClick="onClick"
                android:text="registrarme al evento"
                android:textSize="10dp"
                android:layout_below="@+id/direccion_Evento"
                android:layout_alignLeft="@+id/direccion_Evento"
                android:layout_alignStart="@+id/direccion_Evento" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>