<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dos"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.foxconntech.egresoft.activitys.Registro">



    <TextView
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textColor="@color/primary_light"
        android:text="Bienvenido Egresado"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <AutoCompleteTextView
        android:id="@+id/txtNombres"
        android:layout_marginBottom="5dp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/bordestext"
        android:inputType="text"
        android:hint="Nombres"
        android:textColorHint="@color/primary_light"
        android:textAlignment="center"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:id="@+id/txtApellidos"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bordestext"
        android:inputType="text"
        android:hint="Apellidos"
        android:textColorHint="@color/primary_light"
        android:textAlignment="center"
        android:layout_below="@+id/txtNombres"
        android:layout_alignLeft="@+id/txtNombres"
        android:layout_alignStart="@+id/txtNombres" />



    <AutoCompleteTextView
        android:id="@+id/txtCorreo1"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/bordestext"
        android:inputType="text"
        android:hint="Correo Principal"
        android:textColorHint="@color/primary_light"
        android:textAlignment="center"
        android:layout_below="@+id/txtApellidos"
        android:layout_alignLeft="@+id/txtApellidos"
        android:layout_alignStart="@+id/txtApellidos" />

    <AutoCompleteTextView
        android:id="@+id/txtCorreo2"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/bordestext"
        android:inputType="text"
        android:hint="Correo Alterno"
        android:textColorHint="@color/primary_light"
        android:textAlignment="center"
        android:layout_below="@+id/txtCorreo1"
        android:layout_alignLeft="@+id/txtCorreo1"
        android:layout_alignStart="@+id/txtCorreo1" />

    <AutoCompleteTextView
        android:id="@+id/txtTelefono1"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bordestext"
        android:inputType="text"
        android:hint="Telefono Principal"
        android:layout_gravity="center"
        android:textColorHint="@color/primary_light"
        android:textAlignment="center"
        android:layout_below="@+id/txtCorreo2"
        android:layout_alignLeft="@+id/txtCorreo2"
        android:layout_alignStart="@+id/txtCorreo2" />

    <AutoCompleteTextView
        android:id="@+id/txtTelefono2"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bordestext"
        android:inputType="text"
        android:hint="Telefono Alterno"
        android:layout_gravity="center"
        android:textColorHint="@color/primary_light"
        android:textAlignment="center"
        android:layout_below="@+id/txtTelefono1"
        android:layout_alignLeft="@+id/txtTelefono1"
        android:layout_alignStart="@+id/txtTelefono1" />

    <AutoCompleteTextView
        android:id="@+id/txtContraseña"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bordestext"
        android:inputType="text"
        android:hint="Nueva Contraseña"
        android:layout_gravity="center"
        android:textColorHint="@color/primary_light"
        android:textAlignment="center"
        android:layout_below="@+id/txtTelefono2"
        android:layout_alignLeft="@+id/txtTelefono2"
        android:layout_alignStart="@+id/txtTelefono2" />

    <AutoCompleteTextView
        android:id="@+id/txtContraseña1"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/bordestext"
        android:inputType="text"
        android:hint="Repita Contraseña"
        android:textColorHint="@color/primary_light"
        android:textAlignment="center"
        android:layout_below="@+id/txtContraseña"
        android:layout_alignLeft="@+id/txtContraseña"
        android:layout_alignStart="@+id/txtContraseña" />



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Spinner
                    android:id="@+id/idSpinnerNumeroFicha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtContraseña1"
                    android:layout_alignLeft="@+id/txtContraseña1"
                    android:layout_alignStart="@+id/txtContraseña1"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Spinner
                    android:id="@+id/idSpinnerGenero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/txtContraseña1"
                    android:layout_alignEnd="@+id/txtContraseña1" />

                <Spinner
                    android:id="@+id/idSpinnerEstadoCivil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/txtContraseña1"
                    android:layout_alignEnd="@+id/txtContraseña1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Spinner
                    android:id="@+id/idSpinnerEstaLaborando"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/txtContraseña1"
                    android:layout_alignEnd="@+id/txtContraseña1" />

                <Spinner
                    android:id="@+id/idSpinnerTieneEmpleoDeacuerdo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/txtContraseña1"
                    android:layout_alignEnd="@+id/txtContraseña1" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
